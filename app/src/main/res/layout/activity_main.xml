<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.eliete.myarchitecturecomponents.MainActivity"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:id="@+id/scoreTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="72sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="72sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn3TeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn2TeamA"
            app:layout_constraintEnd_toEndOf="@+id/btn2TeamA"
            app:layout_constraintStart_toStartOf="@+id/btn2TeamA"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:text=" 3 points" />

        <Button
            android:id="@+id/btn1TeamA"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="lance livre"
            app:layout_constraintBottom_toTopOf="@+id/btnReset"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2TeamA" />

        <Button
            android:id="@+id/btn2TeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 points"
            app:layout_constraintBottom_toTopOf="@+id/btn1TeamA"
            app:layout_constraintEnd_toEndOf="@+id/btn1TeamA"
            app:layout_constraintStart_toStartOf="@+id/btn1TeamA"
            app:layout_constraintTop_toBottomOf="@+id/btn3TeamA" />

        <Button
            android:id="@+id/btn2TeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 points"
            app:layout_constraintBottom_toTopOf="@+id/btn1TeamB"
            app:layout_constraintEnd_toEndOf="@+id/btn1TeamB"
            app:layout_constraintStart_toStartOf="@+id/btn1TeamB"
            app:layout_constraintTop_toBottomOf="@+id/btn3TeamB" />

        <Button
            android:id="@+id/btn1TeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lance livre"
            app:layout_constraintBottom_toTopOf="@+id/btnReset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/btn2TeamB" />

        <Button
            android:id="@+id/btn3TeamB"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="3 points"
            app:layout_constraintBottom_toTopOf="@+id/btn2TeamB"
            app:layout_constraintEnd_toEndOf="@+id/btn2TeamB"
            app:layout_constraintStart_toStartOf="@+id/btn2TeamB"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeamA"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn3TeamA"
            app:layout_constraintEnd_toEndOf="@+id/btn3TeamA"
            app:layout_constraintStart_toStartOf="@+id/btn3TeamA"
            app:layout_constraintTop_toBottomOf="@+id/scoreTeamA" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeamB"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn3TeamB"
            app:layout_constraintEnd_toEndOf="@+id/btn3TeamB"
            app:layout_constraintStart_toStartOf="@+id/btn3TeamB"
            app:layout_constraintTop_toBottomOf="@+id/scoreTeamB" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.5" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>